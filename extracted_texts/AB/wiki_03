(s-&gt;right-&gt;color == BLACK)) {
 s-&gt;color = RED;
 delete_case1(n-&gt;parent);
 } else
 delete_case4 (n);
void
delete_case4(struct node *n)
 struct node *s = sibling (n);
 if（(n-&gt;parent-&gt;color == RED)&amp;&amp;
(s-&gt;color == BLACK)&amp;&amp;
