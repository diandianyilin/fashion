Julia语言.
function ShellSort(A)
 inc = div(length(A), 2)
 while inc &gt; 0
 for i in inc+1:length(A)
 j = i
 tmp = A[i]
 while j &gt; inc &amp;&amp; A[j - inc] &gt; tmp
 A[j] = A[j-inc]
 j -= inc
 end
 A[j] = tmp
 end
 if inc == 2
 inc = 1
 else
 inc = floor(Int, inc * 5.0 / 11)
 end
 end
 return A
end
A = [16,586,1,31,354,43,3]
