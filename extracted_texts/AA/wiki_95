 $temp = $arr[$i];
 for ($j = $i - $gap; $j &gt;= 0 &amp;&amp; $arr[$j] &gt; $temp; $j -= $gap)
 $arr[$j + $gap] = $arr[$j];
 $arr[$j + $gap] = $temp;
