Objective-C.
OC语言中的单例模式:
@interface Control : NSObject
+(id)getShare;
@end
static Control *mControl;
@implementation Control
+(id)getShare
 if (mControl == nil) {
 mControl = [[Control alloc] init];
 return mControl;
-(id)init {
//你需要初始化的属性。。。
@end
PHP.
PHP语言中的单例模式:
&lt;?php
class singleton
 private function __construct()
 static public function instance()
 static $obj = null;
 if($obj === null)
 $obj = new self();
 return $obj;
